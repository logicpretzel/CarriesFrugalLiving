@model IEnumerable<CarriesFrugalLiving.ViewModels.ReviewListView>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<!-- userCD, rating,  offensive, recipeID, kw -->

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

  <table class="table col-sm-8 bgcolor-maroon">
      <tr>
          <td><div>Rating:</div>
              <select id="rating" name="rating" onchange="javascript: submit();">
                <option value="0" selected="selected">None</option>
                 <option value="1">One Star</option>
                 <option value="2">Two Stars</option>
                 <option value="3">Three Stars</option>
                 <option value="4">Four Stars</option>
                   <option value="5">Five Stars</option>
                </select>
          </td>
          <td>
              <div>Recipe ID:</div><input id="recipeid" name="recipeid" type="text"  />
          </td>
          <td>
                <div>Keyword:</div> <input id="kw" name="kw" type="text" />
        
          </td>
          <td>
              <span class="glyphicon glyphicon-search"></span><input type="submit" value="Search" class="btn btn-primary" />
          </td>
      </tr>
     
  </table>
  <input type="reset" onclick="javascript: submit();" />
       } <!-- SEARCH FORM END -->


        <hr />
        <table class="table color-primary-0">
            <tr>
                <th>
                    Recipe
                </th>
                <th>
                    Reviewer
                </th>
                <th>
                    Comment
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rating)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Offensive)
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RecipeID)&nbsp;
                        @Html.DisplayFor(modelItem => item.RecipeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReviewerDisplayName)
                    </td>
                    <td>

                        @Html.DisplayFor(modelItem => item.ReviewShortened)


                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rating)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.Offensive)
                    </td>

                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    </td>
                </tr>
            }

        </table>

<div>
 
    <a href="@Url.Action("Index", "Admin")" title="Administration Dashboard">
        <i class="glyphicon glyphicon-dashboard"></i>
        <span class="sr-only">Administration Dashboard</span>
