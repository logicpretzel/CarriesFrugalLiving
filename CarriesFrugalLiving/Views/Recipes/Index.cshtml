                    <a id="searchLink1" class="btn btn-primary " href="/Recipes/List?scategory=1">

                        <img class="flex" src="~/images/entree.jpg" alt="Entree" />
                    </a>
                </div>
                <div class="col-sm-5 padded">
                    <span class="color-complement-0 fontlabel">Sides</span>
                    <a id="searchLink3" class="btn btn-primary " href="/Recipes/List?scategory=SIDEDISH">

                        <img class="flex" src="~/images/sidedish.png" alt="Side Dish Carrots" />
                    </a>
                </div>
            </div>
        <div class="row centered">
            <div class="col-sm-1 ">&nbsp;</div>
            <div class="col-sm-5 padded">
                <span class="color-complement-0 fontlabel">Desserts</span>
