                    <img class="flex" src="~/images/soup.png" alt="Soup" />

                </a>

            </div>
        </div>
        <div class="row centered">
            <div class="col-sm-1 ">&nbsp;</div>
            <div class="col-sm-5 padded">
                <span class="color-complement-0 fontlabel">Breads</span>
                <a id="searchLink3" class="btn btn-primary " href="/Recipes/List?scategory=BREAD">

                    <img class="flex" src="~/images/bread.png" alt="Bread" />
                </a>
            </div>
            <div class="col-sm-5 padded">
                <span class="color-complement-0 fontlabel">Salads</span>
                <a id="searchLink7" class="btn btn-primary " href="/Recipes/List?scategory=SALAD">

                    <img class="flex" src="~/images/salad.png" alt="Salad" />
                </a>
            </div>
